<UserControl x:Class="TaskTuner.Views.TaskListItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TaskTuner.Views"
             mc:Ignorable="d" 
             d:DesignHeight="145" d:DesignWidth="435">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="38" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Style="{StaticResource TaskTitle}" Foreground="{StaticResource TaskListUCTitle}" Text="Test" Margin="20 0" VerticalAlignment="Center"></TextBlock>
        <Border Grid.Row="0" HorizontalAlignment="Right" VerticalAlignment="Center" Padding="20 5" CornerRadius="5" Background="{StaticResource Importance-Citical}">
            <TextBlock Text="IMORTANT" Foreground="{StaticResource OnAccent}" FontWeight="Bold"></TextBlock>
        </Border>
        <TextBlock Grid.Row="1"
                   Margin="20 0"
                   Foreground="{StaticResource TaskListUCText}"
                   Text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Curabitur quis est lorem. Fusce sed lectus vel ante vestibulum iaculis. Vivamus sit amet enim sit amet purus scelerisque feugiat. " TextWrapping="Wrap"></TextBlock>
        <TextBlock Grid.Row="2"
            Margin="20 0"
            Foreground="{StaticResource TaskListUCText}"
            Text="Due :20 10 1975" FontWeight="Bold"></TextBlock>
    </Grid>
</UserControl>
