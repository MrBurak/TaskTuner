<UserControl x:Class="TaskTuner.Views.TaskListItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             xmlns:models="clr-namespace:TaskTuner.Models"
             d:DesignHeight="145" d:DesignWidth="435">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="38" />
            <RowDefinition Height="*" />

            <RowDefinition Height="40" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Width="400">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <!-- Title -->
            <TextBlock Grid.Column="0" 
            Style="{StaticResource TaskTitle}" 
            Foreground="{StaticResource TaskListUCTitle}" 
            Text="{Binding Title}" 
            Margin="20 0" 
            VerticalAlignment="Center"/>
            <!-- Importance -->
            <Border Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center" 
        Padding="20 5" CornerRadius="5" Background="{Binding SolidColorBrush}">
                <TextBlock Text="{Binding TaskImportance}" 
               Foreground="{StaticResource OnAccent}" 
               FontWeight="Bold"/>
            </Border>
        </Grid>
        
       

        

        <!-- Description -->
        <TextBlock Grid.Row="1"
                   Margin="20 0"
                   Foreground="{StaticResource TaskListUCText}"
                   Text="{Binding Description}" 
                   TextWrapping="Wrap"/>

        <!-- Due Date -->
        <TextBlock Grid.Row="2"
                   Margin="20 0"
                   Foreground="{StaticResource TaskListUCText}"
                   Text="{Binding DueDate, StringFormat='Due: {0:dd/MM/yyyy}'}" 
                   FontWeight="Bold"/>
    </Grid>
</UserControl>
